#!/usr/bin/env bash
# SPDX-License-Identifier: MPL-2.0
set -euo pipefail

SCRIPT_DIR=$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)
source "$SCRIPT_DIR/common.sh"

rm -rf "$REPO_ROOT/.pytest_cache" "$REPO_ROOT/.mypy_cache" "$REPO_ROOT/.ruff_cache" "$REPO_ROOT/build" "$REPO_ROOT/dist" "$REPO_ROOT/htmlcov"
find "$REPO_ROOT/sbom" -type f ! -name '.gitkeep' -delete
find "$REPO_ROOT" -name "__pycache__" -type d -prune -exec rm -rf {} +
find "$REPO_ROOT" -name "*.py[co]" -delete
