# Editor configuration to maintain consistent coding styles
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.{yml,yaml,json,md,sh}]
indent_size = 2

[Makefile]
indent_style = tab
indent_size = 4

[*.py]
indent_size = 4
max_line_length = 120
